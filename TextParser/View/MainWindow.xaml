<Window x:Class="TextParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="328.4" Width="451.2">
    <Grid Margin="0,0,-0.4,0.4">
        <TextBox x:Name="CountWord" HorizontalAlignment="Left" Height="23" Margin="19,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Меньше какого количества символов удалить слова" HorizontalAlignment="Left" Margin="19,44,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="Answer" HorizontalAlignment="Left" Margin="19,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="146" Width="408"/>
        <CheckBox x:Name="PunctBox" Content="Удалить знаки препинания" HorizontalAlignment="Left" Margin="19,114,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ParserButton" Content="Выбрать файл и произвести парсировку файлов" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalAlignment="Top" Width="299" Click="ParserButton_Click"/>

    </Grid>
</Window>
